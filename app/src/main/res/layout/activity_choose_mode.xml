<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/chooseMode"
    android:background="@drawable/mainpage">



    <Button
        android:id="@+id/btn_local"
        android:background="@drawable/button_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 单机模式 "
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:allowUndo="false"
        android:layout_marginLeft="30sp"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="30sp"
        android:translationZ="1dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fbeb5d" />

    <Button
        android:id="@+id/btn_lan"
        android:background="@drawable/button_lan"
        android:text=" 局域网模式 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="30sp"
        android:translationZ="1dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fbeb5d" />

    <Button
        android:id="@+id/btn_wan"
        android:background="@drawable/button_wlan"
        android:text=" 连接服务器 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="30sp"
        android:translationZ="1dp"
        android:textSize="20sp"
        android:textColor="#fbeb5d"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/backgroud2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:translationZ="-1dp" />

    <include
        layout="@layout/content_wait_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/records"
        android:background="@drawable/records"
        android:layout_width="45sp"
        android:layout_height="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2sp"
        android:layout_marginRight="5sp"/>

</RelativeLayout>
